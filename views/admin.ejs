<%- include('partials/head', { title: 'Admin' }) %>
<%- include('partials/navbar') %>

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <h1 class="h3 mb-0">Admin Panel</h1>
      <div class="text-muted small">Manage Sports and Rooms (Admin only).</div>
    </div>
    <button class="btn btn-outline-dark btn-sm" id="adminRefreshBtn" type="button">Refresh</button>
  </div>

  <div id="adminAlert" class="alert alert-warning d-none"></div>

  <div class="row g-4">
    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Sports</h5>

          <form id="sportCreateForm" class="row g-2 mb-3">
            <div class="col-12">
              <input class="form-control" name="name" placeholder="Sport name (e.g. Basketball)" required />
            </div>
            <div class="col-12">
              <input class="form-control" name="description" placeholder="Description (optional)" />
            </div>
            <div class="col-12">
              <button class="btn btn-dark w-100">Add Sport</button>
            </div>
          </form>

          <div id="sportsList"></div>
        </div>
      </div>
    </div>

    <div class="col-lg-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Rooms</h5>

          <form id="roomCreateForm" class="row g-2 mb-3">
            <div class="col-12">
              <input class="form-control" name="name" placeholder="Room name (e.g. Main Hall)" required />
            </div>
            <div class="col-12">
              <input class="form-control" name="location" placeholder="Location (optional)" />
            </div>
            <div class="col-12">
              <input class="form-control" name="capacity" type="number" min="1" placeholder="Capacity (e.g. 30)" required />
            </div>
            <div class="col-12">
              <button class="btn btn-dark w-100">Add Room</button>
            </div>
          </form>

          <div id="roomsList"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
